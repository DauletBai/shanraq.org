}

atqar array_slice(array: jol[], start: san, end: san) -> jol[] {
    jasau sliced: jol[] = [];
    san i = start;
    while (i < end && i < array_uzyn_bolu(array)) {
        sliced = sliced + [array[i]];
        i = i + 1;
    }
    qaytar sliced;
}

atqar array_copy(array: jol[]) -> jol[] {
    jasau copy: jol[] = [];
    san i = 0;
    while (i < array_uzyn_bolu(array)) {
        copy = copy + [array[i]];
        i = i + 1;
    }
    qaytar copy;
}

