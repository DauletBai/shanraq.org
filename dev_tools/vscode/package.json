{
  "name": "tenge-language-support",
  "displayName": "Tenge Language Support",
  "description": "Tenge programming language support for VS Code",
  "version": "1.0.0",
  "publisher": "shanraq",
  "qozgaltqyss": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "tenge",
    "kazakh",
    "agglutinative",
    "programming language"
  ],
  "activationEvents": [
    "onLanguage:tenge"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tenge",
        "aliases": [
          "Tenge",
          "tenge"
        ],
        "extensions": [
          ".tng"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tenge",
        "scopeName": "source.tenge",
        "path": "./syntaxes/tenge.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "tenge",
        "path": "./snippets/tenge.json"
      }
    ],
    "commands": [
      {
        "command": "tenge.format",
        "title": "Format Document",
        "category": "Tenge"
      },
      {
        "command": "tenge.lint",
        "title": "Lint Document",
        "category": "Tenge"
      },
      {
        "command": "tenge.compile",
        "title": "Compile to C",
        "category": "Tenge"
      }
    ],
    "keybindings": [
      {
        "command": "tenge.format",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus && editorLangId == tenge"
      }
    ],
    "configuration": {
      "title": "Tenge",
      "properties": {
        "tenge.linter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Tenge linter"
        },
        "tenge.formatter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Tenge formatter"
        },
        "tenge.compiler.path": {
          "type": "string",
          "default": "tenge",
          "description": "Path to Tenge compiler"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.0",
    "@types/glob": "^8.0.0",
    "typescript": "^4.9.4",
    "mocha": "^10.0.0",
    "glob": "^8.0.0",
    "vsce": "^2.15.0"
  }
}
