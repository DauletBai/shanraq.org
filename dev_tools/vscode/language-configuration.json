{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b"
    }
  },
  "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(atqar|jasau|eger|azirshe|while|for|if|else|function|class|struct)\\b.*:\\s*$",
    "decreaseIndentPattern": "^\\s*(qaytar|end|else|endif|endwhile|endfor)\\b"
  }
}
